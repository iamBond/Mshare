<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
     <ImageButton 
            android:id="@+id/button_sms"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sms_on"
            android:layout_centerHorizontal="true"
            />
        
         <TextView
            android:id="@+id/text_sms" 
            android:layout_below="@id/button_sms"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/smstext"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            />
         
         <ImageButton 
            android:id="@+id/button_weichat"
            android:layout_marginTop="20dp"
            android:layout_below="@id/text_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/weixin_on"
            />
    
        
        <TextView 
            android:id="@+id/text_weichat"
            android:layout_below="@id/button_weichat"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/weichattext"
            android:textColor="@android:color/black"
            />
       
    

</RelativeLayout>
