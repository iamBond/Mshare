<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    >
    
   
        
        <TextView 
            android:id="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_view"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            />
   
    
    

   
        
        <ImageButton 
            android:id="@+id/button_weibo"
            android:layout_below="@id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="#00000000"
            android:src="@drawable/umeng_socialize_sina_on"
            />
        
         <TextView
            android:id="@+id/text_sina" 
            android:layout_below="@id/button_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="新浪微博"
            />
         
        <ImageButton 
            android:id="@+id/button_qq"
            android:layout_marginLeft="120dp"
            android:layout_below="@id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@drawable/umeng_socialize_qq_on"
            />

        <TextView 
            android:id="@+id/text_qq"
            android:layout_below="@id/button_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/button_qq"
            android:layout_marginLeft="25dp"
            android:text="QQ"
            />
    
     <ImageButton 
            android:id="@+id/button_qqzone"
            
            android:layout_below="@id/text_sina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@drawable/umeng_socialize_qzone_on"
            />
    
        
        <TextView 
            android:id="@+id/text_qqzone"
            android:layout_below="@id/button_qqzone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="腾讯空间"
            />
       
        
        
        <ImageButton 
            android:id="@+id/button_weichat"
            android:layout_marginLeft="120dp"
            android:layout_below="@id/text_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
			android:src="@drawable/umeng_socialize_wechat"
            />
       
   
        
         <TextView 
            android:layout_below="@id/button_weichat"
            android:layout_alignLeft="@id/button_weichat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="微信"
            />
    
    
</RelativeLayout>
