<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
     <ImageButton 
            android:id="@+id/button_qqzone"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/qqzone_on"
            
            />

        <TextView 
            android:id="@+id/text_qqzone"
            android:layout_below="@id/button_qqzone"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/qqzonetext"
            android:textColor="@android:color/black"
            />
        
         <ImageButton 
            android:id="@+id/button_sina"
            android:layout_marginTop="20dp"
            android:layout_below="@id/text_qqzone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/sina_on"
            />
       
   
        
         <TextView 
            android:layout_below="@id/button_sina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="@string/sina_text"
            android:textColor="@android:color/black"
            />

</RelativeLayout>
